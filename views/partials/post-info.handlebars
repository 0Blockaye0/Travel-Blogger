<article class="post">
  <div class="uk-width-1-2">
    <div class="uk-card uk-card-default" id="post-div">
      <div class="uk-card-media-top post-image">
        <img src="{{post_url}}" alt="post image" />
      </div>
      <div class="uk-card-body">
        <h2 class="post-destination">{{post_destination}}</h2>
        <h3 class="uk-card-title">by
          {{user.username}}
          on
          {{format_date created_at}}</h3>
        <p>{{post_content}}</p>
      </div>
    </div>
  </div>
</article>