<ol class="post-list">
  <li>
    <article class="post">
      <div class="post_url">
        <a href="{{post_url}}"></a>
        <span>({{post_url}})</span>
      </div>
      <div class="post_content">
        {{post_content}}
      </div>
      <div class="meta">
        by {{user.username}} on
        {{created_at}}
        |
      </div>
    </article>
  </li>
</ol>